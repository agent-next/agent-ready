# Agent Ready API - Environment Variables

# Server
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:your_password@db:5432/agent_ready
POSTGRES_PASSWORD=your_secure_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Scan settings
MAX_PARALLEL_SCANS=10
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT_MS=300000
AGENT_CONCURRENCY=20
CLONE_TIMEOUT_MS=120000
MAX_REPO_SIZE_MB=500

# Security
ALLOWED_ORIGINS=https://agent-ready.org,https://www.agent-ready.org

# Optional: GitHub API token for higher rate limits
# GITHUB_TOKEN=ghp_xxx
